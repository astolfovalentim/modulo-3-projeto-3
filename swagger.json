{
  "openapi": "3.0.0",
  "info": {
    "title": "API Rick and Morty",
    "description": "API para CRUD das personagens da Série Rick and Morty",
    "termsOfService": "",
    "contact": {
      "email": "contato@astolfovalentim.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://mod3-back-rickandmorty.onrender.com",
      "description": "API de produção Render"
    },

    {
      "url": "http://localhost:3001",
      "description": "API de teste"
    }
  ],
  "paths": {
    "/users/create": {
      "post": {
        "summary": "Criar um novo usuário",
        "description": "Rota responsável por criar um novo usuário",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "Users": {
                  "value": {
                    "name": "new Tony Stark",
                    "username": "newironman",
                    "email": "newtonystarkironman@gmail.com",
                    "password": "new123456",
                    "photo": "https://sc04.alicdn.com/kf/H5b0183557cec4043946f03208a7a29dat.jpg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schemma": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/users/": {
      "get": {
        "summary": "Buscar todos os usuários",
        "description": "Rota responsável por buscar todos os usuários",
        "tags": ["Users"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Entrar na API do Rick and Morty",
        "description": "Rota responsável fazer o login de um user cadastrado",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "User": {
                  "value": {
                    "email": "tonystarkironman@gmail.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/characters/create": {
      "post": {
        "summary": "Cadastrar uma personagem",
        "description": "Rota responsável por cadastrar uma personagem",
        "tags": ["Characters"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Characters"
              },
              "examples": {
                "Characters": {
                  "value": {
                    "name": "Beth Smith",
                    "imageUrl": "https://rickandmortyapi.com/api/character/avatar/39.jpeg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Characters"
                }
              }
            }
          }
        }
      }
    },
    "/characters": {
      "get": {
        "summary": "Buscar todas as personagens",
        "description": "Rota responsável por por buscar todas as personagens",
        "tags": ["Characters"],
        "responses": {
          "404": {
            "description": "Not Found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Characters"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/characters/find/{id}": {
      "get": {
        "summary": "Busca uma personagem pelo ID",
        "description": "Rota responsável por buscar uma personagem pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da personagem para a busca",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Characters"
                }
              }
            }
          }
        }
      }
    },

    "/characters/update/{id}": {
      "put": {
        "summary": "Editar uma personagem pelo ID",
        "description": "Rota responsável por editar uma personagem pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da personagem para a busca",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Characters"
              },
              "examples": {
                "Characters": {
                  "value": {
                    "name": "Beth Smith EDITADO",
                    "imageUrl": "https://rickandmortyapi.com/api/character/avatar/39.jpeg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Characters"
                }
              }
            }
          }
        }
      }
    },
    "/characters/delete/{id}": {
      "delete": {
        "summary": "Apagar uma personagem pelo ID",
        "description": "Rota responsável por apagar uma personagem pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da personagem para deleção",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },

    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "photo": {
            "type": "string"
          }
        }
      },
      "Characters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          }
        }
      }
    }
  }
}
